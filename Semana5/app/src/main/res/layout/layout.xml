<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonReset"
            android:backgroundTint="@color/vermelho_forte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:onClick="reset"/>
        <TextView
            android:id="@+id/textPontoA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:text="Ponto A"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonVerA"
                    android:backgroundTint="@color/amarelo"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:text="Ver"
                    android:onClick="verPontoA" />

                <Button
                    android:id="@+id/buttonLerA"
                    android:backgroundTint="@color/azul_marinho"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:text="Ler"
                    android:onClick="lerPontoA" />

            </LinearLayout>

            <EditText
                android:id="@+id/editPontoA"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:ems="10"
                android:inputType="textPersonName|textMultiLine"
                android:textSize="12sp"
                android:maxLines="5"
                android:textAlignment="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/textPontoB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:text="Ponto B"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonVerB"
                    android:backgroundTint="@color/amarelo"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:text="Ver"
                    android:onClick="verPontoB"/>

                <Button
                    android:id="@+id/buttonLerB"
                    android:backgroundTint="@color/azul_marinho"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:text="Ler"
                    android:onClick="lerPontoB"/>

            </LinearLayout>

            <EditText
                android:id="@+id/editPontoB"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:ems="10"
                android:inputType="textPersonName|textMultiLine"
                android:textSize="12sp"
                android:maxLines="5"
                android:textAlignment="center" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DistÃ¢ncia"
            android:backgroundTint="@color/teal_200"
            android:onClick="calcularDistancia"/>

        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webv" />

    </LinearLayout>

</LinearLayout>